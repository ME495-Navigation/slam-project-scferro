<launch>

  <!-- Launch nusim node -->
  <node pkg="nusim" exec="nusim" name="nusim">
    <param from="$(find-pkg-share nusim)/config/$(var basic_world.yaml)"/>
  </node>

  <!-- Run load_one.launch.py from nuturtle_description package -->
  <include file="$(find-pkg-share nuturtle_description)/launch/load_one.launch.py">
    <arg name="use_rviz" value="false" />
    <arg name="color" value="red" />
  </include>

  <!-- Launch rviz -->
  <node name="rviz2" pkg="rviz2" exec="rviz2" args="$(find-pkg-share nusim)/config/nusim.rviz" if="$(eval '\'$(var use_rviz_sim)\' == \'true\'')"/>

  <arg name="use_rviz_sim" default="true" 
   description="Specify if rviz should start - true, false"/>

</launch>